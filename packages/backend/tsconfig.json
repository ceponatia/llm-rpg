{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false,
    "noEmit": true,
    "types": ["node"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "paths": {
      "@rpg/utils": ["../utils/src"],
      "@rpg/utils/*": ["../utils/src/*"]
    }
  },
  "references": [
    { "path": "../types" }
  ],
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}