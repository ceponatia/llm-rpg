###############################################
# RPG Consolidated Environment Example (.env) #
###############################################

########################
# Core Backend (Memory) #
########################
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=test123
PORT=3001

# Optional Redis / Vector / Other backends (uncomment if used)
# REDIS_URL=redis://localhost:6379
# VECTOR_INDEX_PATH=./data/vector.index

#############################
# Local Dev Frontend Origins #
#############################
# Story (player-facing) Vite dev server
STORY_ORIGIN=http://localhost:5174
# Admin dashboard Vite dev server
ADMIN_ORIGIN=http://localhost:5173

# API key protecting admin-only endpoints (set a strong secret in prod)
ADMIN_API_KEY=change-me-dev

#########################################
# Frontend Build â†’ Backend Integration   #
#########################################
# Base URL the frontends use for API calls
VITE_MEMORY_API=http://localhost:3001
# Where Story frontend can iframe / link to admin dashboard
VITE_ADMIN_DASHBOARD_ORIGIN=http://localhost:5173

############################################
# Static Embedding Feature Flags (Optional) #
############################################
# Serve built admin dashboard from backend /admin/*
SERVE_ADMIN_STATIC=false
# Serve built story frontend from backend /app/* (enable after build:frontend:embed added)
SERVE_FRONTEND_STATIC=false

################################
# WebSocket / Real-time Options #
################################
# If deploying behind reverse proxy adjust ORIGINS accordingly.
# WS path is derived from VITE_MEMORY_API (ws(s)://host:port/updates)

################################
# Misc / Observability (optional)#
################################
# INCLUDE_SOURCE_MAPS=true
# LOG_LEVEL=info
# BUILD_HASH=dev-local

################################
# Frontend Feature Flags         #
################################
# Enable chat UI pieces that call /api/chat/message (currently missing on backend)
VITE_FRONTEND_CHAT_ENABLED=false
# Placeholder future flags (leave commented until implemented)
# VITE_FRONTEND_VECTOR_SEARCH=false
# VITE_SHOW_DEBUG_PANELS=false
# VITE_ENABLE_WS_RECONNECT_TRACE=false

